        <activity
            android:name="com.vanhuan.appnews.ListNewFragment"
            android:label="@string/title_activity_game_fragment" >
        </activity>
        <activity
            android:name="com.vanhuan.appnews.PublishFragment"
            android:label="@string/title_activity_publish_fragment" >
