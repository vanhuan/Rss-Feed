            <intent-filter>
                <action android:name="com.vanhuan.appnews.CATEGORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.vanhuan.appnews.NewsListActivity" />
        <activity android:name="com.vanhuan.appnews.NewsActivity" />
        <activity
            android:name="com.vanhuan.appnews.HomeFragment"
            android:label="@string/title_activity_home_fragment" >
